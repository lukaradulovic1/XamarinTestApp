             x:Class="XamarinTestApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#DeepPink" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Antistress app!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button Text="Click Me" Clicked="Handle_Clicked" />

        <Label Text="Press the Antistress button 10 times to reduce stress." FontSize="Title" Padding="30,10,30,10"/>
        <Label FontSize="16" Padding="30,24,30,0">
        </Label>
    </StackLayout>

</ContentPage>
